<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alifazel.fitnessapp.HomeScreen$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/top_login">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/name_of_user"
                android:text="@string/text_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="7"
                android:paddingRight="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="2.94"
                android:id="@+id/imageView"
                android:src="@drawable/grey_circle"
                android:contentDescription="login image" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="100dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_centerInParent="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Space
                    android:layout_width="20px"
                    android:layout_height="40px" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="New Button"
                    android:id="@+id/button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="10px" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="New Button"
                    android:id="@+id/button2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="10px" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="New Button"
                    android:id="@+id/button3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="10px" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="New Button"
                    android:id="@+id/button4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="10px" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="New Button"
                    android:id="@+id/button5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="10px" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="New Button"
                    android:id="@+id/button6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="10px" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="New Button"
                    android:id="@+id/button7"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
